@model SaleAuthViewmodel
@{
    ViewData["Title"] = "Sale";
}
<section class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
      <section class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-users"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
            <form asp-controller="SaleAuth" asp-action="Create" method="post">
                <div>
                    <input id="IsEditMode" name="IsEditMode" value="@ViewBag.IsEditMode" class="hidden">
                </div>
             <div class="SaleAuth">
                 <div class="tab-pane active" role="tabpanel" id="step1">
                        <h3>กำหนด Sale Authorize</h3>
                        <hr>

                <div class="row">
                    <div class="col-lg-1">
                        <div class="form-group">
                         <label for="CompCode">รหัสบริษัท</label>
                        <input  class="form-control hidden" asp-for="CompCodeEdit" placeholder="Enter CompCode">
                        <input  class="form-control" asp-for="CompCode" value="KI" placeholder="Enter CompCode">
                        <div class="col-sm-10">
                        <span asp-validation-for="CompCode" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-1">
                        <div class="form-group">
                         <label for="Position">ตำแหน่ง</label>
                        <input  class="form-control" asp-for="Position" placeholder="Enter Position">
                        <div class="col-sm-10">
                        <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                <!-- /.col-lg-6 -->
                </div>
                <div class="row">
                    <div class="col-lg-2">
                        <div class="form-group">
                        <label for="RegionCode">เขต:</label>
                        <input  class="form-control hidden" asp-for="RegionCodeEdit" placeholder="Enter RegionCode">
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" asp-for="RegionCode" asp-items="@(new SelectList(ViewBag.branch,"RegionCode","RegCodeAndName"))">
                        <option> </option>
                        </select>
                        </div>
                         <div class="col-sm-3">
                        <span asp-validation-for="RegionCode" class="text-danger"></span>
                        </div>
                        <!-- /input-group -->
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                        <label for="SaleId">รหัสนักเกษตร</label>
                         <input  class="form-control hidden" asp-for="SaleIdEdit" placeholder="Enter SaleId">
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" asp-for="SaleId" asp-items="@(new SelectList(ViewBag.sale,"SaleId","SaleFullname"))">
                        <option> </option>
                        </select>
                        </div>
                         <div class="col-sm-10">
                        <span asp-validation-for="SaleId" class="text-danger"></span>
                        </div>
                        <!-- /input-group -->
                    </div>
                <!-- /.col-lg-6 -->
                </div>
                 <div class="row">
                     <div class="col-lg-6">
                         @if(Model.Salelist == null){

                         }else{
                         <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>รหัสนักเกษตร</th>
                                <th>รหัสเขต</th>
                                <th>ตำแหน่ง</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                                    @foreach (var item in Model.Salelist)
                            {
                                <tr>
                                    <td>@item.SaleId</td>
                                    <td>@item.RegionCode</td>
                                    <td>@item.Position</td>
                                    <td> 
                                        <a id="detailCarModal" asp-action="EditMutiple" asp-route-id="@item.CompCode" asp-route-SaleId="@item.SaleId" asp-route-RegId="@item.RegionCode" class="btn bg-purple btn-sm">
                                                <i class="fa fa-pencil" data-id="@item.CompCode"></i> รายละเอียด
                                            </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                            </table>
                         }
                       
                     </div>
                 </div>
                <!-- /.col-lg-6 -->
                        <ul class="list-inline pull-left">
                            <li><button type="button" asp-action="Index" class="btn bg-navy btn-flat margin back-step">Back</button></li>
                            <li><button type="submit" id="Savesubmit" class="btn bg-purple margin">Save</button></li>
                        </ul>
                    </div>
              </div>
            </form>
             </div>
     @await Html.PartialAsync("_Loadding")
        </section>
    </section>
   
</section>
@section Scripts{
<script>
    $(document).ready(function() {
	$(".select2").select2();
	$(".back-step").on("click", () => {
		window.location.href = "/SaleAuth/Index";
	});
});

</script>

}
