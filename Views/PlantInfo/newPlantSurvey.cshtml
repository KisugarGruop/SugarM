
@{

    ViewData["Title"] = "พื้นที่ใหม่รอส่งสำรวจ";
    //Layout = null;
}

<partial name="mdWaiting" />

<section class="content-wrapper">

    <section class="content">
        <div class="box-body">
            <h2>พื้นที่ใหม่รอส่งสำรวจ</h2>
            <table id="gvShow" class="table table-striped table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th>รหัสนักเกษตร</th>
                        <th>คำอธิบาย</th>
                        <th class="no-sort">สถานะ</th>
                    </tr>
                </thead>

            </table>
        </div>
    </section>


</section>



@section Scripts{

    <script type="text/javascript">

        var table;

        function createObj() {


        }

    </script>

    <script type="text/javascript">
        var authHeaders;
        var xurl;
        var mdWait;

        $(document).ready(function () {
           
            mdWait = $("#mdWait");
            mdWait.modal({
                backdrop: false,
                keyboard: false,
                focus: true,
                show: false
            });

            // เข้ามาเอา token ก่อน มีสิทธิหรือเปล่าล่ะ
            mdWait.modal('show');
            $.ajax({
                url: "../jbase/gettk",
                success: function (data, status, xhr) {
                    authHeaders = data.xtk;
                    xurl = data.xurl;
                },
                error: function (xhr, status, e) {

                },
                complete: function (xhr, status) {
                    mdWait.modal('hide');

                    if (status == 'success') {
                        createObj();
                        eventObj();
                        getDataShow();

                    } else {
                        //Error
                        // ไปไหนสักหน้า
                    }
                }
            });
        });

    </script>

    <script type="text/javascript">

        function eventObj() {

        }

    </script>

    <script type="text/javascript">



        function getDataShow() {
            mdWait.modal('show');
            $.ajax({
                url: xurl + "PlantSurveyGet?SaleId=KI1101&Status=Approved",
                dataType: "json",
                headers: {
                    Authorization: "bearer " + authHeaders
                },
                success: function (data, status, xhr) {
                    gvShowData(data);

                }, error: function (xhr, status, e) {

                },
                complete: function (xhr, status) {

                    mdWait.modal('hide');

                    if (status == 'success') {

               swal("เรียบร้อยดี", "โหลดข้อมูลได้อย่างเรียบร้อยครับ", "success");

                    } else {

                        //Error
                        // ไปไหนสักหน้า
                    }

                }
            });
        }
    </script>

    <script type="text/javascript">

        function gvShowData(data) {

            table = $('#gvShow').DataTable({
                destroy: true,
                
                data: data,
                columns: [
                    { data: 'SaleId' },
                    { data: 'Description' },
                     { data: 'Status' }
                ],
                order: [[0, 'desc']],
                columnDefs: [
                    {
                        targets: 'no-sort',
                        orderable: false,
                        searchable: false
                    }
                ],
                language: {
                    emptyTable: "ไม่พบข้อมูล",
                    infoFiltered: " - กรองจากทั้งหมด _MAX_ ข้อมูล",
                    infoEmpty: "ไม่มีข้อมูลจากการค้นหา",
                    sSearch: "ค้นหา",
                    sLengthMenu: "แสดงข้อมูลทีละ _MENU_ ข้อมูล",
                    sInfo: "ข้อมูล _START_ ถึง _END_ จากทั้งหมด _TOTAL_ ข้อมูล",
                    oPaginate: {
                        sFirst: "หน้าแรก",
                        sPrevious: "ก่อนหน้า",
                        sNext: "ถัดไป",
                        sLast: "หน้าสุดท้าย"
                    }
                }
            });
        }
    </script>
}
