@model List<SugarM.Models.Bank>
@{
    ViewData["Title"] = "Bank";
    ViewData["CurrentPage"]= "menu2";
}

						<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
							<div class="kt-portlet kt-portlet--mobile">
								<div class="kt-portlet__head kt-portlet__head--lg">
									<div class="kt-portlet__head-label">
										<span class="kt-portlet__head-icon">
											<i class="kt-font-brand flaticon2-line-chart"></i>
										</span>
										<h3 class="kt-portlet__head-title">
											 @ViewData["Title"]
										</h3>
									</div>
									<div class="kt-portlet__head-toolbar">
										<div class="kt-portlet__head-wrapper">
											<div class="kt-portlet__head-actions">
												&nbsp;
												<a asp-action="Create" data-controller="Bank" data-action="Create" class="btn btn-brand btn-elevate btn-icon-sm active">
													<i class="la la-plus"></i>
													New Record
												</a>
											</div>
										</div>
									</div>
								</div>
								<div class="kt-portlet__body">

									<!--begin: Datatable -->
                                    <table id="tablebank" class="table table-striped table-bordered" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th>รหัสธนาคาร</th>
                                                <th>ชื่อธนาคาร</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.BankCode</td>
                                                    <td>@item.BankName</td>
                                                    <td style="width: 250px;">
                                                         <a class="btn btn-warning btn-sm active" asp-action="GetBankBranch" asp-route-id="@item.BankCode" data-id="@item.BankCode" asp-controller="Bank"><i class="flaticon-analytics"></i>Brach
                                                        </a>
                                                        <a id="detailCarModal" asp-action="Edit" asp-route-id="@item.BankCode" class="btn btn-primary btn-sm active">
                                                                <i class="flaticon-folder-1" data-id="@item.BankCode"></i> Detail
                                                            </a>
                                                            <a id="deleteCarModal" asp-action="Delete" asp-route-id="@item.BankCode"
                                                            class="btn btn-danger btn-sm active delete"
                                                            data-id="@item.BankCode"
                                                            data-controller="Bank"
                                                            data-action="Delete"
                                                            data-ta="#tablebank"
                                                            data-redirect-url="/Bank/Index"
                                                            data-body-message="คุณต้องการลบข้อมูลข้อมูลหลักทรัพย์ @item.BankCode ใช่หรือไม่?">
                                                                <i class="flaticon-delete-1" data-id="@item.BankCode"></i> Delete
                                                            </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
									<!--end: Datatable -->
								</div>
							</div>
						</div>


@section Scripts{
    <script>
    $(document).ready(function() {
     var dataTablebk = $("#tablebank").DataTable({
        bDestroy: true, //ทำลายอันเก่าทิ้งแล้วรอคำสั่ง reload
		paging: true, //showpaging
		lengthChange: false,
		searching: false,
		ordering: true,
		info: true,
		autoWidth: false,
        order: [[1, "asc"]],
		language: {
			emptyTable: "No data found, Please click on <b>Add New</b> Button",
			sSearch: "ค้นหา",
			sLengthMenu: "แสดงข้อมูลทีละ _MENU_ ข้อมูล",
			sInfo: "ข้อมูล _START_ ถึง _END_ จากทั้งหมด _TOTAL_ ข้อมูล",
			oPaginate: {
				sFirst: "หน้าแรก",
				sPrevious: "ก่อนหน้า",
				sNext: "ถัดไป",
				sLast: "หน้าสุดท้าย"
			}
	    }
     });
     $("#tablebank").on("click", "#deleteCarModal", function(e) {
         $(".overlay").removeClass("hidden");
        $(".fa-refresh").removeClass("hidden");
     });
    });
    </script>
}