@section Scripts{

    <script>
        $(document).ready(function () {
                var dataTablebk = $("#table_id").DataTable({
                    bDestroy: true, //ทำลายอันเก่าทิ้งแล้วรอคำสั่ง reload
                    paging: true, //showpaging
                    lengthChange: false,
                    searching: false,
                    ordering: true,
                    info: true,
                    autoWidth: false,
                    order: [[1, "asc"]],
                    language: {
                        emptyTable: "No data found, Please click on <b>Add New</b> Button",
