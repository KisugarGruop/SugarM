                        oPaginate: {
                            sFirst: "หน้าแรก",
                            sPrevious: "ก่อนหน้า",
                            sNext: "ถัดไป",
                            sLast: "หน้าสุดท้าย"
                        }
                    }
                });

                $("#table_id").on('click', '.btcedit', function(e){
                    var roleid = $(this).data('id');
                    var url = "/Access/Edit?id=" + roleid;
                    window.location.href = url;
                    return false;

                });
        });
    </script>




