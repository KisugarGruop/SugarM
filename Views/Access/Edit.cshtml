
@model UserRoleViewModel

@{
     ViewData["Title"] = "Edit User Access";
      ViewData["CurrentPage"]= "menu1";
    var roles = (IEnumerable<ApplicationRole>)ViewData["Roles"];
}


	<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">

							<div class="kt-portlet kt-portlet--mobile">
								<div class="kt-portlet__head kt-portlet__head--lg">
									<div class="kt-portlet__head-label">
										<span class="kt-portlet__head-icon">
											<i class="kt-font-brand flaticon2-line-chart"></i>
										</span>
										<h3 class="kt-portlet__head-title">
											Access
										</h3>
									</div>
									<div class="kt-portlet__head-toolbar">

									</div>
								</div>
								<div class="kt-portlet__body">
                                    <form asp-action="Edit">
                                        <input type="hidden" asp-for="UserId" />
                                        <input type="hidden" asp-for="UserName" />
                                        <div class="form-group">
                                            <label class="col-md-2 control-label">รายละเอียด</label>
                                            <div class="col-md-10">
                                                @Html.DisplayFor(m => m.UserName)
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="form-group">    
                                            <div class="form-group">
													<label>สิทธิ์การเข้าถึง</label>
													<div class="kt-checkbox-list">
												          @foreach (var role in roles)
                                                            {
                                                                <label class="kt-checkbox kt-checkbox--tick kt-checkbox--danger">
                                                                        <input type="checkbox" name="Roles[]" value="@role.Name"
                                                                        @if (Model?.Roles != null && Model.Roles.Contains(role.Name)) { <text> checked="checked" </text> } /> @role.Name
                                                                        <span></span>
                                                                </label>
                                                            }
													</div>
												</div>

                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                  <button type="submit" class="btn btn-success btn-elevate">บันทึก</button>
                                            </div>
                                          
                                        </div>
                                    </form>
                                       
								</div>
							</div>
						</div>

