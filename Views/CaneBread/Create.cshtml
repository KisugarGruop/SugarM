@model CaneBread
@{
    ViewData["Title"] = "CreateCaneBread";
    ViewData["CurrentPage"]= "menu2";
}


<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                @ViewData["Title"]
            </h3>
        </div>
    </div>

    <!--begin::Form-->
    <form asp-controller="CaneBread" asp-action="Create" method="post" class="kt-form kt-form--label-right">
            <input id="IsEditMode" style="display: none;" name="IsEditMode" value="@ViewBag.IsEditMode">
            <input id="DeleteFlag" style="display: none;" name="DeleteFlag" value="N" class="hidden">
        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-3">
                    <label>พันธุ์อ้อย:</label>
                    <input type="text" asp-for="BreadName" readonly="true" class="form-control" placeholder="Enter BreadName">
                    <span asp-validation-for="BreadName" class="text-danger"></span>
                </div>
                <div class="col-lg-3">
                    <label for="BreadWeight" class="">จำนวนตันต่อไร่:</label>
                    <input type="text" asp-for="BreadWeight" class="form-control" placeholder="Enter BreadWeight">
                    <span asp-validation-for="BreadWeight" class="text-danger"></span>
                </div>
                <div class="col-lg-3">
                    <label for="remarks" class="">หมายเหตุ:</label>
                    <input type="text" asp-for="remarks" class="form-control" placeholder="Enter remarks">
                    <span asp-validation-for="remarks" class="text-danger"></span>
                </div>
            </div>

        <div class="kt-portlet__foot">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-4">
                        <button type="button" asp-action="Index" class="btn btn-dark back-step">Back</button>
                        <button type="submit" id="Savesubmit" value="CreatebankbranchNew" class="btn btn-brand">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!--end::Form-->
</div>
</div>



@section Scripts{
    <script>
        $(document).ready(function() {
            $(".select2").select2();
            var ObjEdit = $("#IsEditMode").val();
            if (ObjEdit == "false"){
             $(".form-control").removeAttr('readonly');
            }
            $(".back-step").on("click",()=>{
                window.location.href = "/CaneBread/Index";
            });
        });
    </script>
}
