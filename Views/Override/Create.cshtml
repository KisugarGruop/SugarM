@model Override

@{
    ViewData["Title"] = "CreateOverride";
}
<section class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
      <section class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-users"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
        <!---- Company -->
        <div class="box-body">
            <form asp-controller="Override" asp-action="Create" method="post">
                <div>
                    <input id="IsEditMode" name="IsEditMode" value="@ViewBag.IsEditMode" class="hidden">
                </div>
             <div class="DocRunning">
                 <div class="tab-pane active" role="tabpanel" id="step1">
                        <h3>ระดับผู้อนุมติ</h3>
                        <input class="hidden" asp-for="Currentpage" value="">
                        <hr>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                        <label for="CompCode">รหัสบริษัท</label>
                        <input class="form-control" asp-for="CompCode" readonly="true"  placeholder="Enter CompCode">
                        </div>
                         <div class="col-sm-10">
                        <span asp-validation-for="CompCode" class="text-danger"></span>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="CaneYear">ปีการผลิต</label>
                        <input  class="form-control" asp-for="CaneYear" readonly="true" placeholder="Enter CaneYear">
                        <div class="col-sm-10">
                        <span asp-validation-for="CaneYear" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="OverrideLevel">ระดับผู้อนุมติ</label>
                        <input  class="form-control" asp-for="OverrideLevel" readonly="true" placeholder="Enter OverrideLevel">
                        <div class="col-sm-10">
                        <span asp-validation-for="OverrideLevel" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="Description">รายละเอียด</label>
                        <input  class="form-control" asp-for="Description" placeholder="Enter Description">
                        <div class="col-sm-10">
                        <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                <!-- /.col-lg-6 -->
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="MinAmount">MinAmount</label>
                        <input  class="form-control" asp-for="MinAmount" placeholder="Enter MinAmount">
                        <div class="col-sm-10">
                        <span asp-validation-for="MinAmount" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="MaxAmount">MaxAmount</label>
                        <input  class="form-control" asp-for="MaxAmount" placeholder="Enter MaxAmount">
                        <div class="col-sm-10">
                        <span asp-validation-for="MaxAmount" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                        <label for="Active">การใช้งาน</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" asp-for="Active">
                          <option value="Y">Y</option>
                          <option value="N">N</option>
                        </select>
                        </div>
                         <div class="col-sm-3">
                        <span asp-validation-for="Active" class="text-danger"></span>
                        </div>
                  <!-- /input-group -->
                    </div>
                </div>
                        <ul class="list-inline pull-left">
                            <li><button type="button" asp-action="Index" class="btn bg-navy btn-flat margin back-step">Back</button></li>
                            <li><button type="submit" id="Savesubmit" class="btn bg-purple margin">Save</button></li>
                        </ul>
                    </div>
              </div>
            </form>
        </div>
             @await Html.PartialAsync("_Loadding")
        </section>
    </section>
   
</section>
@section Scripts{
    <script>
        var Isedit = $("#IsEditMode").val();
            if (Isedit == "false"){
                $(".form-control").removeAttr('readonly');
            }else{
        }
        $(".select2").select2();
        $(document).ready(function() {
            $(".back-step").on("click",()=>{
                window.location.href = "/Override/Index";
            });
        });
    </script>
}
