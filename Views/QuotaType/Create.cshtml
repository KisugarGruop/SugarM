@model QuotaType
@{
    ViewData["Title"] = "CreateSales";
}
<section class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
      <section class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-users"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
        <!---- Company -->
        <div class="box-body">
            <form asp-controller="QuotaType" asp-action="Create" method="post">
                <div>
                    <input id="IsEditMode" name="IsEditMode" value="@ViewBag.IsEditMode" class="hidden">
                </div>
             <div class="QuotaType">
                 <div class="tab-pane active" role="tabpanel" id="step1">
                        <h3>ประเภทโควต้า</h3>
                        <hr>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                        <label for="TypeCode">ประเภทโควต้า</label>
                        <input class="form-control" asp-for="TypeCode"  placeholder="Enter TypeCode">
                        </div>
                         <div class="col-sm-10">
                        <span asp-validation-for="TypeCode" class="text-danger"></span>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="Description">รายละเอียด</label>
                        <input  class="form-control" asp-for="Description" placeholder="Enter Description">
                        <div class="col-sm-10">
                        <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                <!-- /.col-lg-6 -->
                </div>
                        <ul class="list-inline pull-left">
                            <li><button type="button" asp-action="Index" class="btn bg-navy btn-flat margin back-step">Back</button></li>
                            <li><button type="submit" id="SaveQuota" class="btn bg-purple margin">Save</button></li>
                        </ul>
                    </div>
              </div>
            </form>
        </div>
        <div class="overlay hidden">
            <i class="fa fa-refresh fa-spin hidden"></i>
        </div>
        </section>
    </section>
   
</section>
@section Scripts{
    <script>
        $(document).ready(function() {
            $(".back-step").on("click",()=>{
                window.location.href = "/QuotaType/Index";
            });
            $("#SaveQuota").on("click",()=>{
                $(".overlay").removeClass("hidden");
                $(".fa-refresh").removeClass("hidden");
            });
        });
    </script>
}
