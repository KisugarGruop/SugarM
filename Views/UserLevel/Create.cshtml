@model UserLevel

@{
    ViewData["Title"] = "CreateUserLevel";
}
<section class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
      <section class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-users"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
        <!---- Company -->
        <div class="box-body">
            <form asp-controller="UserLevel" asp-action="Create" method="post">
                <div>
                    <input id="IsEditMode" name="IsEditMode" value="@ViewBag.IsEditMode" class="hidden">
                </div>
             <div class="DocRunning">
                 <div class="tab-pane active" role="tabpanel" id="step1">
                        <h3>ระดับผู้ใช้งาน</h3>
                        <hr>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                        <label for="CompCode">รหัสบริษัท</label>
                        <input class="form-control" asp-for="CompCode" readonly="true"  placeholder="Enter CompCode">
                        </div>
                         <div class="col-sm-10">
                        <span asp-validation-for="CompCode" class="text-danger"></span>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="CaneYear">ปีการผลิต</label>
                        <input  class="form-control" asp-for="CaneYear" readonly="true" placeholder="Enter CaneYear">
                        <div class="col-sm-10">
                        <span asp-validation-for="CaneYear" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                    @if (@ViewBag.IsEditMode == "true"){
                        <div class="col-lg-3">
                            <div class="form-group">
                            <input  class="form-control hidden" asp-for="UserId" readonly="true" placeholder="Enter UserId">
                            <label for="Fullname">รหัสผู้ใช้งาน</label>
                            <input  class="form-control" asp-for="Fullname" readonly="true" placeholder="Enter Fullname">
                            <div class="col-sm-10">
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>
                            </div>
                        </div>
                    }else{
                        <div class="col-lg-3">
                            <div class="form-group">
                            <label for="UserId">รหัสผู้ใช้งาน</label>
                            <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" asp-for="UserId" asp-items="@(new SelectList(ViewBag.UserSugarM,"UserId","UserFullname"))">
                            <option> </option>
                            </select>
                            </div>
                            <div class="col-sm-3">
                            <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                        </div>
                    }

                    <div class="col-lg-3">
                         <label for="UseridLevel">ระดับผู้อนุมัติ</label>
                        <div class="input-group">
                            <!-- /btn-group -->
                              <input  class="form-control" asp-for="UseridLevel" placeholder="Enter MinAmount">
                            <div class="input-group-btn">
                            <a class="btn btn-danger search"><i class="fa fa-search"></i> ค้นหา</a>
                            </div>
                        </div>
                    </div>
                <!-- /.col-lg-6 -->
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="MinAmount">MinAmount</label>
                        <input  class="form-control" asp-for="MinAmount" readonly="true" placeholder="Enter MinAmount">
                        <div class="col-sm-10">
                        <span asp-validation-for="MinAmount" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="MaxAmount">MaxAmount</label>
                        <input  class="form-control" asp-for="MaxAmount" readonly="true" placeholder="Enter MaxAmount">
                        <div class="col-sm-10">
                        <span asp-validation-for="MaxAmount" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                         <label for="Description">รายละเอียด</label>
                        <input  class="form-control" asp-for="Description" placeholder="Enter Description">
                        <div class="col-sm-10">
                        <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                        <label for="Active">การใช้งาน</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" asp-for="Active">
                          <option value="Y">Y</option>
                          <option value="N">N</option>
                        </select>
                        </div>
                         <div class="col-sm-3">
                        <span asp-validation-for="Active" class="text-danger"></span>
                        </div>
                  <!-- /input-group -->
                    </div>
                </div>
                        <ul class="list-inline pull-left">
                            <li><button type="button" asp-action="Index" class="btn bg-navy btn-flat margin back-step">Back</button></li>
                            <li><button type="submit" id="Savesubmit" class="btn bg-purple margin">Save</button></li>
                        </ul>
                    </div>
              </div>
            </form>
        </div>
          

           @* Modal------------------------------------------------ *@

           <div class="modal fade" id="Overridemodal"
                         data-keyboard="false" data-backdrop="static">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">

                                    </button>
                                    <h4 class="modal-title">ระดับผู้อนุมัติ</h4>
                                </div>
                                <div class="nav-tabs-custom">
              <div class="tab-content">
                    <div id="TableOverride">

                    </div>
                </div>
            <!-- /.box-body -->
            <div class="modal-footer">
                <button type="button" id="btnHideModal" class="btn btn-primary button button4">
                    ปิด
                </button>
            </div>
             @await Html.PartialAsync("_Loadding")
        </section>
    </section>
   
</section>
@section Scripts{



    
    <script>
        $(document).ready(function () {
            var Isedit = $("#IsEditMode").val();
                if (Isedit == "false"){
                    $(".form-control").removeAttr('readonly');
                }else{
                }
                $(".select2").select2();
                $(".back-step").on("click",()=>{
                    window.location.href = "/UserLevel/Index";
                });
                $("#btnHideModal").on("click",() =>{
                    $("#Overridemodal").modal("hide");
                });
                $(".search").on("click", () => {
                    var url = "/UserLevel/GetOverride";
                    $.ajax({
                            url: url,
                            data: {
                            data: "data"
                            },
                            type: "GET",
                            success: function (data) {
                            $("#TableOverride").html(data);
                            },
                            }).then(function () {
                                $("#Overridemodal").modal("show");
                            });
                });
        });

    </script>
}
