@model Companysale
@{
    ViewData["Title"] = "Sale";
}
<section class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
      <section class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-users"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
            <form asp-controller="Sale" asp-action="Create" method="post">
                <div>
                    <input id="IsEditMode" name="IsEditMode" value="@ViewBag.IsEditMode" class="hidden">
                </div>
             <div class="Sale">
                 <div class="tab-pane active" role="tabpanel" id="step1">
                        <h3>ข้อมูลนักเกษตร</h3>
                        <hr>
                <div class="row">
                    <div class="col-lg-2">
                        <div class="form-group">
                        <label for="SaleId">รหัสนักเกษตร</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" asp-for="SaleId" asp-items="@(new SelectList(ViewBag.sale,"SaleId","SaleId"))">
                        <option> </option>
                        </select>
                        </div>
                         <div class="col-sm-10">
                        <span asp-validation-for="SaleId" class="text-danger"></span>
                        </div>
                        <!-- /input-group -->
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                         <label for="SaleName">ชื่อนักเกษตร</label>
                        <input  class="form-control" asp-for="SaleName" placeholder="Enter SaleName">
                        <div class="col-sm-10">
                        <span asp-validation-for="SaleName" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                <!-- /.col-lg-6 -->
                </div>
                <div class="row">
                    <div class="col-lg-2">
                        <div class="form-group">
                        <label for="CompCode">รหัสบริษัท:</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" asp-for="CompCode" asp-items="@(new SelectList(ViewBag.company,"CompCode","CompCode"))">
                        <option> </option>
                        </select>
                        </div>
                         <div class="col-sm-10">
                        <span asp-validation-for="CompCode" class="text-danger"></span>
                        </div>
                        <!-- /input-group -->
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                         <label for="BranchCode">รหัสสาขา</label>
                        <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true" asp-for="BranchCode" asp-items="@(new SelectList(ViewBag.branch,"BranchCode","DpComIdandname"))">
                        <option> </option>
                        </select>
                        <div class="col-sm-10">
                        <span asp-validation-for="BranchCode" class="text-danger"></span>
                        </div>
                        </div>
                  <!-- /input-group -->
                    </div>
                <!-- /.col-lg-6 -->
                </div>
                <!-- /.col-lg-6 -->
                        <ul class="list-inline pull-left">
                            <li><button type="button" asp-action="Index" class="btn bg-navy btn-flat margin back-step">Back</button></li>
                            <li><button type="submit" id="Savesubmit" class="btn bg-purple margin">Save</button></li>
                        </ul>
                    </div>
              </div>
            </form>
             </div>
     @await Html.PartialAsync("_Loadding")
        </section>
    </section>
   
</section>
@section Scripts{
    <script>
        $(document).ready(function() {
            $(".select2").select2();

            $(".back-step").on("click",()=>{
                window.location.href = "/Sale/Index";
            });
            $("#SaleId").change(function(){
                var url = "/Sale/GetsaleID/" + $("#SaleId").val();
                $.ajax({
                url: url,
                data: { data: "data" },
                type: "GET",
                success: function(data) {
                    var DT = data;
                    for (i = 0; i < DT.length; i++) {
                        var rec = DT[i];
                        $("#SaleName").val(rec.SaleName);
                    }
                }
            });
        });
        });
    </script>
}